        <activity android:name=".screen.RegistrationActivity" android:exported="true" />
        <activity android:name=".screen.SlideMenuScreenActivity" android:exported="true" />
        <activity android:name=".screen.SplashScreenActivity" android:exported="true" />
        -->

    </application>

</manifest>
